<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/table_background">
    
    <TextView
        android:id="@+id/tv_data_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textStyle="bold"
        android:text="Data name"
        android:textSize="25sp"
        android:textColor="@color/text"
        android:gravity="top"/>

    <TextView
        android:id="@+id/tv_data_list_item_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_below="@id/tv_data_list_item_name"
        android:text="Data code"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/tv_data_list_item_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_below="@id/tv_data_list_item_code"
        android:text="Data place"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/tv_data_list_item_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_below="@id/tv_data_list_item_place"
        android:text="Data number"
        android:textColor="@color/text"/>

</RelativeLayout>